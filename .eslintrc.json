{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "plugin:vue/strongly-recommended"
  ],
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "vue/no-parsing-error": [
      "error",
      {
        "unexpected-solidus-in-tag": false
      }
    ],
    "vue/html-indent": [2, 4, {
      "attribute": 2,
      "baseIndent": 1,
      "closeBracket": 0,
      "alignAttributesVertically": true,
      "ignores": []
    }],
    "vue/no-v-text-v-html-on-component": 0,
    "vue/require-default-prop": "off",
    "vue/valid-v-model": "off",
    "vue/html-quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "vue/script-indent": [
      "error",
      //Spaces per tab
      4,
      //Script Tag Indent
      {
        "baseIndent": 0,
        "switchCase": 1,
        "ignores": []
      }
    ],
    "semi": [
      1,
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 150
      }
    ]
  }
}
